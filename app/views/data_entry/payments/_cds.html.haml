
- if @center.meeting_day? @date
  Payments collected by 
  = select :received_by, :collection => StaffMember.all, :value_method => :id, :text_method => :name, :selected => @center.manager.id.to_s

  %table.narrow.form{ :width => '100%'}
    %thead
      %tr{:style => "font-size: 0.85em;"}
        %th
        %th name
        %th id
        %th amount
        %th outstanding
        %th.center status
        %th disbursed on
        %th funder
        %th installment
        %th principal due
        %th interest due
        %th total due
        %th paid
        %th attended
          
    %tbody{:style => "text-align:left;" }
      - tot_amount, tot_outstanding, tot_installments, tot_principal, tot_interest, tot_total = 0, 0, 0, 0, 0, 0
      - @center.clients.each do |client|
        - loan_row_count = 0
        - Loan.all(:client_id => client.id).each do |loan|
          - lh = loan.history(:date => @date)[0] #TODO make this work even for non payment dates
          - #next if [nil, :repaid, :pending].include? loan.status
          - loan_row_count += 1
          %tr{ :class => cycle('odd','') }
            %td &nbsp;
            %td
              %b= link_to loan.client.name, resource(@center.branch, @center, loan.client)
            %td
              = loan.id
            %td.numeric
              - amt = loan.amount
              %b= amt.to_currency
              - tot_amount += amt
            %td.numeric
              - p = lh.nil? ? 0 : lh.actual_outstanding_principal
              %b= p.to_currency
              - tot_outstanding += p
            %td.center
              = lh.status.to_s unless lh.nil?
            %td
              = loan.disbursal_date.to_s
            %td
              = loan.funder_name
            %td.numeric
              - ins = loan.number_of_installments_before(@date)
              = ins
              - tot_installments += ins
            %td.numeric
              - p = lh.nil? ? 0 : lh.principal_due.to_i
              = p.to_currency
              - tot_principal += p
            %td.numeric
              - i = lh.nil? ? 0 : lh.interest_due.to_i
              = i.to_currency
              - tot_interest += i
            %td.numeric
              - a = p + i
              = a.to_currency
              - tot_total += a
            %td.numeric
              - if a == 0
                = lh.nil? ? 0 : (lh.principal_paid.to_i + lh.interest_paid.to_i)
              - else 
                = text_field :name => loan.id, :value => a, :cols => "5", :style => "width:50px;" 

        - if loan_row_count == 0
          %tr{ :class => cycle('odd','') }
            %td
            %td
              %b= link_to client.name, resource(@branch, @center, client)
            %td{ :colspan => 5 }
              %i nothing outstanding
      %tr{ :style => 'border-bottom: 2px solid;' }
        %tr
          %td
          %td
          %td
          %td.numeric
            %b= tot_amount.to_currency
          %td.numeric
            %b= tot_outstanding.to_currency
          %td
          %td
          %td
          %td.numeric
            %b= tot_installments
          %td.numeric
            %b= tot_principal.to_currency
          %td.numeric
            %b= tot_interest.to_currency
          %td.numeric
            %b= tot_total.to_currency
            
    %tfoot    
      %tr
        %td{ :colspan => 12 }

- else
  %i This day is not a meeting day
