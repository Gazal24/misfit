%h1== Edit the '#{@branch.name}' branch details

= error_messages_for @branch

- if @branch.new_record?
  %p
    Please select a branch that you want to edit
  %table.form
    = form_for(@branch, :action => url(:enter_branches, :action => 'edit')) do
      %tr
        %td &nbsp;
      %tr
        %td &nbsp;
        %td
          Branch ID:
        %td
          = text_field :id, :size => 8
        %td
          = submit "Proceed..."
- else
  = form_for(@branch, :action => url(:enter_branches, :action => 'update', :id => @branch.id)) do
    = partial :fields, :submit_text => "Save changes"
