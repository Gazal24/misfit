%table
  %thead
    %tr
      %th
        Staff Name
      %th
        Approved Loans
      %th
        Disbursed Loans
      %th
        Written Off Loans
      %th
      %th
  - for staff_member in @staff_members
    %tr{ :class => cycle('odd','') }
      %td
        = staff_member.name.capitalize
      %td
        = staff_member.approved_loans.sum(:amount)
      %td
        = staff_member.disbursed_loans.sum(:amount)
      %td
        = staff_member.written_off_loans.sum(:amount)
      %td
        = link_to 'Show', url(:staff_member, staff_member)
      %td
        = link_to 'Edit', url(:edit_staff_member,  staff_member)

= link_to 'New', url(:new_staff_member)