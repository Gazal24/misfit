=form_for(@staff_member, :action => url(:day_sheet, @staff_member), :method => :get, :style => "float: right;") do
  Change date
  = date_select "date", @date
  =submit "Go"

%h1 
  Day sheet for 
  = @staff_member.name
  for 
  = @date
%br
= link_to "Download pdf >>", url(:day_sheet_with_format, :format => "pdf", :date => @date), :style => "float: right;", :class => "button"
- @centers.each do |center|
  %h2
    = center.name
    (
    = center.code
    )
  = partial "centers/payments", {:clients => center.clients, :branch => center.branch, :center => center, :date => @date}
  - if center.clients.loans.all(:scheduled_disbursal_date => @date).count > 0
    - tot_disbursement = 0
    %table.narrow.form{ :width => '100%' }
      %tr
        %thead
          %th{:colspan => "12"}
            Disbursements
      - center.clients.loans.all(:scheduled_disbursal_date => @date).each do |loan|
        - tot_disbursement += loan.amount
        %tr
          %td 
            = loan.client.name
          %td 
            = loan.amount
      %tr{ :style => 'border-bottom: 2px solid;font-weight: bold;border-top: solid 1px #aaa;' }
        %td
          Total Disbursement
        %td
          = tot_disbursement
      %tfoot    
        %tr
          %td{ :colspan => 12 }
  - else
    No disbursements today
