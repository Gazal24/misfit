%h1 Overview of all staff members

%p
  == Manage existing staff members or #{link_to 'create a new staff member', resource(:staff_members, :new)}.

- if @staff_members.blank?
  %p
    %i No staff members been created yet.
- else
  %table.narrow.form{ :width => '100%' }
    %thead
      %tr
        %th
        %th
          name
        %th
          status
        %th{ :width => '50px' }
          manages branches
        %th{ :width => '70px' }
          manages centers
        %th{ :width => '70px' }
          received payments
        %th{ :width => '70px' }
          applied loans
        %th{ :width => '70px' }
          approved loans
        %th{ :width => '70px' }
          rejected loans
        %th{ :width => '70px' }
          disbursed loans
        %th{ :width => '70px' }
          wrote off loans
    - for staff_member in @staff_members
      %tr{ :class => cycle('odd','') }
        %td
        %td
          %b= link_to staff_member.name, resource(staff_member)
        %td
          %b= staff_member.active? ? 'active' : 'disabled'
        %td
          = Branch.all(:manager_staff_id => staff_member.id).size
        %td
          = Center.all(:manager_staff_id => staff_member.id).size
        %td
          = Payment.all(:received_by_staff_id => staff_member.id).size
        %td
          = Loan.all(:applied_by_staff_id => staff_member.id).size
        %td
          = Loan.all(:approved_by_staff_id => staff_member.id).size
        %td
          = Loan.all(:rejected_by_staff_id => staff_member.id).size
        %td
          = Loan.all(:disbursed_by_staff_id => staff_member.id).size
        %td
          = Loan.all(:written_off_by_staff_id => staff_member.id).size
        %td
          = link_to 'edit', resource(staff_member, :edit)

    %tfoot
      %tr
        %td{ :colspan => 11 }

  = link_to 'Create a new staff member', url(:new_staff_member)
