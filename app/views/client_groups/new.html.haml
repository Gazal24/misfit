%h1 Groups

= error_messages_for @client_group

= form_for(@client_group, :action => url(:controller => params[:controller], :action => :create, :id => @client_group), :id => "new_client_group_form") do
  = partial "client_groups/fields"
  %p
    = submit "Create"
-if request.xhr?
  %a{:href => "#", :onclick => "$('#new_client_group_form').html('')"}
    cancel
-else
  = link_to('Back', url(:controller => params[:controller], :action => :index))
