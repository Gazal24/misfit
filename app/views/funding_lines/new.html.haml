%h1 Create a new funding line

= error_messages_for @funding_line

= form_for(@funding_line, :action => resource(@funder, :funding_lines)) do
  %table
    %tr
      %th
        Amount
      %td
        = text_field :amount
    %tr
      %th
        Interest Rate
      %td
        = text_field :interest_rate
        = "%"
    %tr
      %th
        Disbursal Date
      %td
        = date_select_for @funding_line, :disbursal_date
    %tr
      %th
        First Payment Date
      %td
        = date_select_for @funding_line, :first_payment_date
    %tr
      %th
        Last Payment Date
      %td
        = date_select_for @funding_line, :last_payment_date

  = submit "Create funding line"
      